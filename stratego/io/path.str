module spoofax/io/path
imports
    stratego/term/string
    stratego/term/traversal
    
strategies
    
  mkdirs =
      string-split(|"/")
    ; fold-left(make-single-dir | "") 
      
  /** @internal */
  make-single-dir:
    (sofar, next) -> sofar'
  where
      sofar' := <string-concat> [sofar, next]
    ; <mkdir> sofar